<div class= "container">
<p id="notice"><%= notice %></p>

<div class="jumbotron">
    <h1><%= @user.username %></h1>
    <strong> Votes: </strong>
    <ul> 
    	<% @user.votes.each do |vote| %>
    	<li><%= vote.game.name %></li>
    	<% end %>
    </ul>

</div>

<div class="btn-group"><%= link_to 'Edit', edit_user_path(@user), class:"btn btn-warning" %>
<%= link_to 'Back', users_path, class:"btn btn-primary" %></div>

</div>
