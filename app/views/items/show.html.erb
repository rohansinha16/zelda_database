<div class= "container">
<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <div class="row">
  <div class="col-lg-8">
    <h1><%= @item.name %></h1>
    <p> The <%= @item.name %> is from the <%= @item.temple.name %>.
    </p>
    <p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>
  </div>
  <div class="col-lg-2">
    <img src="<%= @item.picture_url %>" height="300" width="300"> </img>
  </div>
 </div>
</div>
<div class="btn-group">
  <%= link_to 'Edit', edit_item_path(@item), class:"btn btn-warning" %>
  <%= link_to 'Back', items_path, class:"btn btn-primary" %>
</div>

</div>
