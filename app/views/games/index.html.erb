<div class= "container">
<div class="jumbotron">
  <div class="row">
  <div class="col-lg-8">
    <h1>Games</h1>
    <%= link_to 'New Game', new_game_path, class:"btn btn-success btn-lg"%>
  </div>
  <div class="col-lg-2">
    <%= image_tag("ZeldaLogo.jpg", :size => "281x209") %>
  </div>
</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year Released</th>
      <th>Station</th>
      <th></th>
    </tr>
  </thead>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.released %></td>
    <td><%= game.station %></td>
    <td>
        <div class="btn-group">
            <%= link_to 'Show', game, class:"btn btn-primary" %>
            <%= link_to 'Edit', edit_game_path(game), class:"btn btn-warning" %>
            <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </div>
    </td>        
  </tr>
<% end %>
</table>

<br />
</div>

