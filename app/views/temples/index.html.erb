<div class= "container">
<div class="jumbotron">
  <div class="row">
  <div class="col-lg-8">
    <h1>Dungeons</h1>
    <%= link_to 'New Temple', new_temple_path, class:"btn btn-success btn-lg"%>
  </div>
  <div class="col-lg-2">
    <%= image_tag("ZeldaLogo.jpg", :size => "281x209") %>
  </div>
</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Game</th>
      <th>Order</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @temples.each do |temple| %>
      <tr>
        <td><%= temple.name %></td>
        <td><%= temple.game.name %></td>
        <td><% if temple.order==1 %>
        1st
      <% elsif temple.order==2 %>
        2nd
      <% elsif temple.order==3 %>
        3rd
      <% else %>
        <%=temple.order%>th
      <% end %></td>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', temple, class:"btn btn-primary" %>
          <%= link_to 'Edit', edit_temple_path(temple), class:"btn btn-warning" %>
          <%= link_to 'Destroy', temple, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div
