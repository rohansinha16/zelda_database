<div class= "container">
<div class= "container">
<div class="jumbotron">
  <div class="row">
  <div class="col-lg-8">
    <h1>Votes</h1>
    <%= link_to 'New Vote', new_vote_path, class:"btn btn-success btn-lg"%>
  </div>
  <div class="col-lg-2">
    <%= image_tag("ZeldaLogo.jpg", :size => "281x209") %>
  </div>
</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Game</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.user.username %></td>
        <td><%= vote.game.name %></td>
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
